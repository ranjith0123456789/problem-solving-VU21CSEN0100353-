
#include<stdio.h>
int main()
{
 int a[50],max,min,size,i;
 printf("Enter the size of the array:");
 scanf("%d",&size);
 printf("Enter the %d values (seperated by space):",size);
 for(i=0;i<size;i++)
 {
 scanf("%d",&a[i]);
 }
 max=a[0];
 min=a[0];
 for(i=0;i<size;i++)
 {
 if(a[i]>max)
 {
 max=a[i];
 }
 if(a[i]<min)
 {
 min=a[i];
 }
 }
 printf("maximum =%d",max);
 printf("\nminimum =%d",min);
 
 return 0;
}
