#include<stdio.h>
int main()
{
	int num,reverse_num=0,reminder,temp;
	printf("enter the num");
	scanf("%d",&num);
	temp=num;
	while(temp!=0)
	{
		reminder=temp%10;
		reverse_num=reverse_num*10+reminder;
		temp/=10;
	}
	if(reverse_num==num)
	{
		printf("the num is pallendrome");
	}
	else
	{
		printf("the num is not a pallendrome");
	}
}
