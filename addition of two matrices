
#include <stdio.h> 
int main() 
{ 
 int m,n,a,b,first[10][10],second[10][10],sum[10][10]; 
 printf("Enter number of rows of both the matrices: "); 
 scanf("%d",&m); 
 printf("Enter number of columns of both the matrices: "); 
 scanf("%d",&n);
 printf("Enter the values of matrix1:\n"); 
 for (a=0;a<m;a++) 
 {
 for (b=0;b<n;b++)
 {
 scanf("%d",&first[a][b]); 
 }
 }
 printf("Enter the values of matrix2:\n"); 
 for (a=0;a<m;a++)
 {
 for (b=0;b<n;b++)
 {
 scanf("%d",&second[a][b]); 
 }
 } 
 printf("Sum of both the matrices :\n");
 for (a=0;a<m;a++) 
 { 
 for (b=0;b<n;b++) 
 { 
 sum[a][b]=first[a][b]+second[a][b]; 
 printf("%d ",sum[a][b]); 
 } 
 printf("\n"); 
 } 
 return 0; 
}
