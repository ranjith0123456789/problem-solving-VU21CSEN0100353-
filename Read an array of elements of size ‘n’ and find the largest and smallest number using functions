
#include<stdio.h>
int func(int n)
{
 int a[50],max,min,i;
 printf("Enter the %d values (seperated by space):",n);
 for(i=0;i<n;i++)
 {
 scanf("%d",&a[i]);
 }
 max=a[0];
 min=a[0];
 for(i=0;i<n;i++)
 {
 if(a[i]>max)
 {
 max=a[i];
 }
 if(a[i]<min)
 {
 min=a[i];
 }
 }
 printf("maximum =%d",max);
 printf("\nminimum =%d",min);
 
 return 0;
}
int main()
{
 int n;
 printf("Enter the size of the array:");
 scanf("%d",&n);
 func(n);
}
