1.PRINT EVEN AND ODD NUMBERS IN A GIVEN RANGE.
#include <stdio.h>
int even(int i,int n)
{
    for(i=0;i<n;i++)
    {
        if(i%2==0)
        {
            printf("%d",i);
        }
    }
}
int odd(int i,int n)
{
    for(i=1;i<n;i++)
    {
        if(i%2==1)
        {
            printf("%d",i);
        }
    }
}
int main()
{
    int i,n;
    printf("enter the value of n");
    scanf("%d",&n);
    even(i,n);
    odd(i,n);
}
